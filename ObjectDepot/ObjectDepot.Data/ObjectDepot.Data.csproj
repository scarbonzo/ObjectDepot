<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netcoreapp2.0</TargetFramework>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <Authors>Richard Eodice</Authors>
    <Description>Currently a simple database abstraction layer written in .Net Core 2.0 that allows you to write objects to a MongoDB (others to come) and fetch them back using an IQueryable.</Description>
    <Copyright>2017</Copyright>
    <PackageRequireLicenseAcceptance>false</PackageRequireLicenseAcceptance>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="MongoDB.Driver" Version="2.4.4" />
  </ItemGroup>
  
</Project>
